{
  "name": "@init/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "start": "supabase start",
    "stop": "supabase stop",
    "reset": "supabase db reset --linked && pnpm push && pnpm seed",
    "generate": "supabase gen types typescript --linked --schema public > src/supabase-types.ts",
    "push": "pnpm with-env prisma db push",
    "studio": "pnpm with-env prisma studio",
    "seed": "pnpm with-env prisma db execute --file ./prisma/supabase.sql --schema ./prisma/schema.prisma && tsx prisma/seed.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@prisma/extension-accelerate": "^1.0.0",
    "@supabase/supabase-js": "^2.39.7"
  },
  "devDependencies": {
    "@kyh/eslint-config": "^0.1.6",
    "@kyh/prettier-config": "^0.1.6",
    "@kyh/tsconfig": "^0.1.6",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supabase": "^1.145.4",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kyh/eslint-config/base"
    ]
  },
  "prettier": "@kyh/prettier-config"
}
