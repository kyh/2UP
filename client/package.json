{
  "name": "playhouse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run gql-gen && react-scripts start",
    "build": "npm run gql-gen && react-scripts build",
    "relay": "relay-compiler --schema schema.json --language typescript --src ./src/ --watchman false $@",
    "format": "prettier --write .",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "introspect-schema": "apollo schema:download --endpoint=http://localhost:4000/graphql schema.json",
    "gql-gen": "npm run introspect-schema && apollo codegen:generate --localSchemaFile=schema.json --target=typescript --includes=src/**/*.tsx --tagName=gql --addTypename --globalTypesFile=src/__generated__/graphql-types.ts __generated__"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.4",
    "babel-plugin-relay": "^9.0.0",
    "lodash": "^4.17.15",
    "phoenix": "^1.4.16",
    "react": "^16.13.1",
    "react-alert": "^7.0.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-canvas-draw": "^1.1.0",
    "react-dom": "^16.13.1",
    "react-modal": "^3.11.2",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux-logger": "^3.0.6",
    "reflexbox": "^4.0.6",
    "styled-components": "^5.0.1",
    "styled-normalize": "^8.0.7",
    "uifx": "^2.0.7"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^10.0.1",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.0",
    "@types/phoenix": "^1.4.3",
    "@types/react": "^16.9.32",
    "@types/react-alert": "^5.2.0",
    "@types/react-beautiful-dnd": "^12.1.2",
    "@types/react-canvas-draw": "^1.1.0",
    "@types/react-dom": "^16.9.6",
    "@types/react-modal": "^3.10.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "@types/reflexbox": "^4.0.0",
    "@types/styled-components": "^5.0.1",
    "apollo": "^2.27.3",
    "babel-plugin-macros": "^2.8.0",
    "graphql": "^14.6.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "raw.macro": "^0.3.0",
    "react-scripts": "^3.4.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
