{
  "name": "playhouse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run gql-gen && react-scripts start",
    "dev": "npm start",
    "build": "npm run codegen && react-scripts build",
    "format": "prettier --write .",
    "test": "react-scripts test",
    "introspect-schema": "apollo schema:download --endpoint=http://localhost:4000/graphql schema.json",
    "codegen": "apollo codegen:generate --localSchemaFile=schema.json --target=typescript --includes=src/**/*.tsx --tagName=gql --addTypename --globalTypesFile=src/__generated__/graphql-types.ts __generated__",
    "gql-gen": "npm run introspect-schema && npm run codegen",
    "clean:codegen": "find . -name __generated__ -exec rm -rf {} \\;"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@reduxjs/toolkit": "^1.4.0",
    "lodash": "^4.17.20",
    "phoenix": "^1.5.6",
    "react": "^17.0.1",
    "react-alert": "^7.0.2",
    "react-beautiful-dnd": "^13.0.0",
    "react-canvas-draw": "^1.1.1",
    "react-colorful": "^4.4.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.9.6",
    "react-modal": "^3.11.2",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-tooltip": "^4.2.10",
    "redux-logger": "^3.0.6",
    "reflexbox": "^4.0.6",
    "styled-components": "^5.2.0",
    "styled-normalize": "^8.0.7",
    "uifx": "^2.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.2",
    "@types/phoenix": "^1.5.0",
    "@types/react": "^16.9.53",
    "@types/react-alert": "^5.2.0",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-canvas-draw": "^1.1.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-modal": "^3.10.6",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/redux-logger": "^3.0.8",
    "@types/reflexbox": "^4.0.1",
    "@types/styled-components": "^5.1.4",
    "@types/webpack-env": "^1.15.3",
    "apollo": "^2.31.0",
    "babel-plugin-macros": "^2.8.0",
    "graphql": "^15.3.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "raw.macro": "^0.4.2",
    "react-scripts": "^3.4.4",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
