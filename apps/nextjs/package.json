{
  "name": "@init/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@edge-csrf/nextjs": "^2.2.2",
    "@init/api": "workspace:latest",
    "@init/db": "workspace:latest",
    "@init/mdx": "workspace:latest",
    "@init/ui": "workspace:latest",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.5",
    "@stripe/react-stripe-js": "^2.7.3",
    "@stripe/stripe-js": "^4.1.0",
    "@tanstack/react-query": "^5.51.1",
    "@tanstack/react-table": "^8.19.2",
    "@trpc/client": "11.0.0-rc.441",
    "@trpc/react-query": "11.0.0-rc.441",
    "@trpc/server": "11.0.0-rc.441",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^4.5.0",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@init/tailwind-config": "workspace:latest",
    "@kyh/eslint-config": "^0.1.9",
    "@kyh/prettier-config": "^0.1.9",
    "@kyh/tsconfig": "^0.1.9",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kyh/eslint-config/base",
      "@kyh/eslint-config/nextjs",
      "@kyh/eslint-config/react"
    ],
    "rules": {
      "react/jsx-curly-brace-presence": [
        "error",
        {
          "props": "never",
          "children": "never"
        }
      ]
    }
  },
  "prettier": "@kyh/prettier-config"
}
