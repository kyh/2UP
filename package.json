{
  "name": "playhouse",
  "workspaces": [
    "web",
    "voice"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:web\" \"npm run dev:voice\"",
    "dev:web": "npm run dev --workspace=web",
    "dev:voice": "npm run dev --workspace=voice",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "husky": "^7.0.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  }
}
